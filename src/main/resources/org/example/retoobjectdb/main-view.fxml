<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.retoobjectdb.controllers.MainController">
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <VBox alignment="CENTER" maxWidth="600.0" spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Listado de películas" />
                  <Label fx:id="lblUsuario" text="Label" />
                  <TableView fx:id="tabla" prefHeight="200.0">
                    <columns>
                      <TableColumn fx:id="cId" prefWidth="75.0" text="ID" />
                      <TableColumn fx:id="cTitulo" prefWidth="75.0" text="Titulo" />
                        <TableColumn fx:id="cEstado" prefWidth="75.0" text="Estado" />
                        <TableColumn fx:id="cSoporte" prefWidth="75.0" text="Soporte" />
                    </columns>
                  </TableView>
                  <FlowPane fx:id="panelUsuario" alignment="CENTER" hgap="20.0">
                     <children>
                        <Button fx:id="btnAñadirCopia" mnemonicParsing="false" onAction="#añadirCopia" text="Añadir Copia" />
                        <Button fx:id="btnBorrar" mnemonicParsing="false" onAction="#borrar" text="Borrar Copia" />
                        <Button fx:id="btnCerrarSesion" mnemonicParsing="false" onAction="#cerrarSesion" text="Cerrar Sesión" />
                        <Button fx:id="btnSalir" mnemonicParsing="false" onAction="#salir" text="Salir" />
                     </children>
                  </FlowPane>
                  <FlowPane fx:id="panelAdmin" alignment="CENTER" hgap="20.0">
                     <children>
                        <Button fx:id="btnAñadirPelicula" mnemonicParsing="false" onAction="#añadirPelicula" text="Añadir Pelicula" />
                        <Button fx:id="btnCerrarSesion1" mnemonicParsing="false" onAction="#cerrarSesion" text="Cerrar Sesión" />
                        <Button fx:id="btnSalir1" mnemonicParsing="false" onAction="#salir" text="Salir" />
                     </children>
                  </FlowPane>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </center>
</BorderPane>
