<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="670.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.retoobjectdb.controllers.PeliculasController">
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <top>
            <Label text="Peliculas en la base de datos" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin></Label>
         </top>
         <right>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label contentDisplay="CENTER" text="Añadir juego" />
                  <Label text="Titulo" />
                  <TextField fx:id="txtTitulo" />
                  <Label text="Genero" />
                  <TextField fx:id="txtGenero" />
                  <Label text="Año" />
                  <TextField fx:id="txtAño" />
                  <Label text="Descripcion" />
                  <TextField fx:id="txtDescripcion" />
                  <Label text="Director" />
                  <TextField fx:id="txtDirector" />
                  <Button fx:id="btnAñadir" mnemonicParsing="false" onAction="#añadirPelicula" text="Añadir" />
               </children>
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </VBox>
         </right>
         <center>
            <TableView fx:id="tabla" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn fx:id="cId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="cTitulo" prefWidth="75.0" text="Titulo" />
                <TableColumn fx:id="cGenero" prefWidth="75.0" text="Genero" />
                  <TableColumn fx:id="cAño" prefWidth="75.0" text="Año" />
                  <TableColumn fx:id="cDescripcion" prefWidth="75.0" text="Descripcion" />
                  <TableColumn fx:id="cDirector" prefWidth="75.0" text="Director" />
              </columns>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </TableView>
         </center>
         <bottom>
            <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#cancelar" text="Cancelar" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin></Button>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
