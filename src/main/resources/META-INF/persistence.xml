<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="objectdb-ad">
        <provider>com.objectdb.jpa.Provider</provider>

        <class>org.example.retoobjectdb.models.Copy</class>
        <class>org.example.retoobjectdb.models.User</class>
        <class>org.example.retoobjectdb.models.Film</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="$objectdb/db/ad.odb"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
        </properties>

    </persistence-unit>
</persistence>